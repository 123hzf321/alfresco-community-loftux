<activiti-config>
   
   <global>
      <evaluators>
         <evaluator id="type-name" class="com.activiti.web.config.evaluator.TypeNameEvaluator" />
      </evaluators>
      <element-readers>
         <!-- NOTE: This will be a built-in element reader, it's here for testing -->
         <element-reader element-name="properties" 
                         class="com.activiti.web.config.xml.elementreader.GenericElementReader" />
     </element-readers>
   </global>
   
   <!-- define a global config section -->
   <config>
      <properties>
         <property name="name" />
      </properties>
   </config>
   
   <config evaluator-ref="type-name" condition="base">
      <properties>
         <property name="description" />
         <property name="created" />
         <property name="modified" />
      </properties>
   </config>
   
   <config evaluator-ref="type-name" condition="SOP">
      <properties>
         <!-- NOTE: the first few props are repeated for now until we get aspect support implemented -->
         <property name="description" />
         <property name="modified" />
         <property name="effective" />
         <property name="approved" />
      </properties>
   </config>
   
</activiti-config>