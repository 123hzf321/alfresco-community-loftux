<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
                              "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">
<faces-config>

   <!-- ==================== APPLICATION ==================== -->
   <application>
      <locale-config>
         <default-locale>en</default-locale>
      </locale-config>
   </application>


   <!-- ==================== COMPONENTS ==================== -->
   <component>
      <component-type>awc.faces.DataGrid</component-type>
      <component-class>com.activiti.web.jsf.component.data.UIDataGrid</component-class>
   </component>
   
   <component>
      <component-type>awc.faces.RichList</component-type>
      <component-class>com.activiti.web.jsf.component.data.UIRichList</component-class>
   </component>
   
   <component>
      <component-type>awc.faces.RichListColumn</component-type>
      <component-class>com.activiti.web.jsf.component.data.UIColumn</component-class>
   </component>
   
   <component>
      <component-type>awc.faces.SortLink</component-type>
      <component-class>com.activiti.web.jsf.component.data.UISortLink</component-class>
   </component>
   
   <component>
      <component-type>awc.faces.DataPager</component-type>
      <component-class>com.activiti.web.jsf.component.data.UIDataPager</component-class>
   </component>
   
   <component>
      <component-type>awc.faces.PropertySheet</component-type>
      <component-class>com.activiti.web.jsf.component.property.UIPropertySheet</component-class>
   </component>

   <component>
      <component-type>awc.faces.Property</component-type>
      <component-class>com.activiti.web.jsf.component.property.UIProperty</component-class>
   </component>
   
   <component>
      <component-type>awc.faces.Panel</component-type>
      <component-class>com.activiti.web.jsf.component.UIPanel</component-class>
   </component>
   
   <component>
      <component-type>awc.faces.Breadcrumb</component-type>
      <component-class>com.activiti.web.jsf.component.UIBreadcrumb</component-class>
   </component>
   
   <component>
      <component-type>awc.faces.ActionLink</component-type>
      <component-class>com.activiti.web.jsf.component.UIActionLink</component-class>
   </component>
   
   <component>
      <component-type>awc.faces.Menu</component-type>
      <component-class>com.activiti.web.jsf.component.UIMenu</component-class>
   </component>
   
   <component>
      <component-type>awc.faces.ModeList</component-type>
      <component-class>com.activiti.web.jsf.component.UIModeList</component-class>
   </component>
   
   <component>
      <component-type>awc.faces.ModeListItem</component-type>
      <component-class>com.activiti.web.jsf.component.UIModeListItem</component-class>
   </component>
   
   <component>
      <component-type>awc.faces.BooleanEvaluator</component-type>
      <component-class>com.activiti.web.jsf.component.evaluator.BooleanEvaluator</component-class>
   </component>
   
   <component>
      <component-type>awc.faces.ValueSetEvaluator</component-type>
      <component-class>com.activiti.web.jsf.component.evaluator.ValueSetEvaluator</component-class>
   </component>
   
   <component>
      <component-type>awc.faces.StringEqualsEvaluator</component-type>
      <component-class>com.activiti.web.jsf.component.evaluator.StringEqualsEvaluator</component-class>
   </component>


   <!-- ==================== CONVERTERS ==================== -->
   <converter>
      <converter-id>converter:StringArray</converter-id>
      <converter-class>com.activiti.web.jsf.converter.StringArrayConverter</converter-class>
   </converter>
   
   
   <!-- ==================== RENDERERS ==================== -->
   <render-kit>
      <!-- custom Data Picker renderer for a UI Input component -->
      <renderer>
         <!-- the component family is a convention name -->
         <component-family>javax.faces.Input</component-family>
         <!-- the renderer type is a convention name - not an actual class -->
         <renderer-type>awc.faces.DatePickerRenderer</renderer-type>
         <!-- the actual renderer class type -->
         <renderer-class>com.activiti.web.jsf.renderer.DatePickerRenderer</renderer-class>
      </renderer>
      
      <renderer>
         <component-family>awc.faces.Data</component-family>
         <renderer-type>awc.faces.RichListRenderer</renderer-type>
         <renderer-class>com.activiti.web.jsf.renderer.data.RichListRenderer</renderer-class>
      </renderer>
      
      <renderer>
         <component-family>awc.faces.Controls</component-family>
         <renderer-type>awc.faces.BreadcrumbRenderer</renderer-type>
         <renderer-class>com.activiti.web.jsf.renderer.BreadcrumbRenderer</renderer-class>
      </renderer>
      
      <renderer>
         <component-family>awc.faces.Controls</component-family>
         <renderer-type>awc.faces.ActionLinkRenderer</renderer-type>
         <renderer-class>com.activiti.web.jsf.renderer.ActionLinkRenderer</renderer-class>
      </renderer>
      
      <renderer>
         <component-family>awc.faces.Controls</component-family>
         <renderer-type>awc.faces.ModeListRenderer</renderer-type>
         <renderer-class>com.activiti.web.jsf.renderer.ModeListRenderer</renderer-class>
      </renderer>
   </render-kit>


   <!-- ==================== MANAGED BEANS ==================== -->
   <managed-bean>
      <description>
         The bean that backs up the New Space Wizard
      </description>
      <managed-bean-name>NewSpaceWizard</managed-bean-name>
      <managed-bean-class>com.activiti.web.wizard.NewSpace</managed-bean-class>
      <managed-bean-scope>session</managed-bean-scope>
   </managed-bean>
   
   <managed-bean>
      <description>
         The bean that backs up the jsf-test webapp Login screen
      </description>
      <managed-bean-name>LoginBean</managed-bean-name>
      <managed-bean-class>jsftest.LoginBean</managed-bean-class>
      <managed-bean-scope>session</managed-bean-scope>
      <!-- default value forced for a managed property -->
      <managed-property>
         <property-name>name</property-name>
         <property-class>java.lang.String</property-class>
         <value>admin</value>
      </managed-property>
   </managed-bean>
   
   <managed-bean>
      <description>
         The bean that holds navigation state.
      </description>
      <managed-bean-name>NavigationBean</managed-bean-name>
      <managed-bean-class>com.activiti.web.bean.NavigationBean</managed-bean-class>
      <managed-bean-scope>session</managed-bean-scope>
   </managed-bean>
   
   <managed-bean>
      <description>
         The bean that holds folder browse state.
      </description>
      <managed-bean-name>BrowseBean</managed-bean-name>
      <managed-bean-class>com.activiti.web.bean.BrowseBean</managed-bean-class>
      <managed-bean-scope>session</managed-bean-scope>
   </managed-bean>
   
   <managed-bean>
      <description>
         The bean that backs up the jsf-test webapp User List screen
      </description>
      <managed-bean-name>UserListBean</managed-bean-name>
      <managed-bean-class>jsftest.UserListBean</managed-bean-class>
      <managed-bean-scope>session</managed-bean-scope>
   </managed-bean>
   
   <managed-bean>
      <description>
         Bean for component testing
      </description>
      <managed-bean-name>TestList</managed-bean-name>
      <managed-bean-class>jsftest.TestList</managed-bean-class>
      <managed-bean-scope>session</managed-bean-scope>
   </managed-bean>

   <managed-bean>
      <description>
         The bean that acts as the Node Service
      </description>
      <managed-bean-name>NodeService</managed-bean-name>
      <managed-bean-class>jsftest.repository.NodeService</managed-bean-class>
      <managed-bean-scope>session</managed-bean-scope>
   </managed-bean>
   
   <managed-bean>
      <description>
         The bean that acts as the Data Dictionary Service
      </description>
      <managed-bean-name>DDService</managed-bean-name>
      <managed-bean-class>jsftest.repository.DataDictionary</managed-bean-class>
      <managed-bean-scope>session</managed-bean-scope>
   </managed-bean>
   
   <managed-bean>
      <description>
         The bean that acts as the navigation aid for the component zoo
      </description>
      <managed-bean-name>ZooService</managed-bean-name>
      <managed-bean-class>jsftest.ZooService</managed-bean-class>
      <managed-bean-scope>application</managed-bean-scope>
   </managed-bean>
   
   
   <!-- ==================== NAVIGATION ==================== -->
   <!-- navigation rules describe the navigation cases between views using the -->
   <!-- outcomes from action methods or the outcome from a default action impl -->
   <navigation-rule>
      <description>
         The decision rule used by the NavigationHandler to
         determine which view must be displayed after the
         current view, login.jsp is processed.
      </description>
      <from-view-id>/jsp/login.jsp</from-view-id>
      <navigation-case>
         <description>
             Indicates to the NavigationHandler that the jump.jsp
             view must be displayed if the Action referenced by a 
             UICommand component on the login.jsp view returns 
             the outcome "success".
         </description>
         <from-outcome>success</from-outcome>
         <to-view-id>/jsp/jump.jsp</to-view-id>
      </navigation-case>
   </navigation-rule>
   
   <!-- Jump page links -->
   <navigation-rule>
      <from-view-id>/jsp/jump.jsp</from-view-id>
      <navigation-case>
         <from-outcome>showUserlist</from-outcome>
         <to-view-id>/jsp/test/userlist.jsp</to-view-id>
      </navigation-case>
      <navigation-case>
         <from-outcome>showComponentsZoo</from-outcome>
         <to-view-id>/jsp/zoo/components.jsp</to-view-id>
      </navigation-case>
      <navigation-case>
         <from-outcome>showPropertyZoo</from-outcome>
         <to-view-id>/jsp/zoo/properties.jsp</to-view-id>
      </navigation-case>
      <navigation-case>
         <from-outcome>showBrowse</from-outcome>
         <to-view-id>/jsp/browse/browse.jsp</to-view-id>
      </navigation-case>
      <navigation-case>
         <from-outcome>showNewSpaceWizard</from-outcome>
         <to-view-id>/jsp/wizard/new-space.jsp</to-view-id>
      </navigation-case>
   </navigation-rule>
   
   <navigation-rule>
      <from-view-id>/jsp/*</from-view-id>
      <navigation-case>
         <from-outcome>jumppage</from-outcome>
         <to-view-id>/jsp/jump.jsp</to-view-id>
      </navigation-case>
   </navigation-rule>

   <!-- Note that the from-view-id can contain * wildcard to specify an entire dir match -->
   <!-- e.g. <from-view-id>/myfiles/*</from-view-id> -->
   <navigation-rule>
      <from-view-id>/jsp/test/userlist.jsp</from-view-id>
      <navigation-case>
         <from-outcome>edituser</from-outcome>
         <to-view-id>/jsp/test/edituser.jsp</to-view-id>
      </navigation-case>
      <navigation-case>
         <from-outcome>adduser</from-outcome>
         <to-view-id>/jsp/test/adduser.jsp</to-view-id>
      </navigation-case>
   </navigation-rule>
   
   <navigation-rule>
      <from-view-id>/jsp/test/adduser.jsp</from-view-id>
      <navigation-case>
         <from-outcome>success</from-outcome>
         <to-view-id>/jsp/test/userlist.jsp</to-view-id>
      </navigation-case>
      <navigation-case>
         <from-outcome>cancel</from-outcome>
         <to-view-id>/jsp/test/userlist.jsp</to-view-id>
      </navigation-case>
   </navigation-rule>
   
   <navigation-rule>
      <from-view-id>/jsp/test/edituser.jsp</from-view-id>
      <navigation-case>
         <from-outcome>success</from-outcome>
         <to-view-id>/jsp/test/userlist.jsp</to-view-id>
      </navigation-case>
      <navigation-case>
         <from-outcome>cancel</from-outcome>
         <to-view-id>/jsp/test/userlist.jsp</to-view-id>
      </navigation-case>
   </navigation-rule>

   <navigation-rule>
      <from-view-id>/jsp/zoo/properties.jsp</from-view-id>
      <navigation-case>
         <from-outcome>showPropertyZoo2</from-outcome>
         <to-view-id>/jsp/zoo/properties-auto.jsp</to-view-id>
      </navigation-case>
   </navigation-rule>
   
   <navigation-rule>
      <from-view-id>/jsp/zoo/properties-auto.jsp</from-view-id>
      <navigation-case>
         <from-outcome>showPropertyZoo</from-outcome>
         <to-view-id>/jsp/zoo/properties.jsp</to-view-id>
      </navigation-case>
   </navigation-rule>
   
   <!-- new space wizard navigation -->
   <navigation-rule>
      <from-view-id>/jsp/wizard/*</from-view-id>
      <navigation-case>
         <from-outcome>cancel</from-outcome>
         <to-view-id>/jsp/jump.jsp</to-view-id>
      </navigation-case>
      <navigation-case>
         <from-outcome>minimise</from-outcome>
         <to-view-id>/jsp/jump.jsp</to-view-id>
      </navigation-case>
   </navigation-rule>
   
   <navigation-rule>
      <from-view-id>/jsp/wizard/new-space.jsp</from-view-id>
      <navigation-case>
         <from-outcome>next-scratch</from-outcome>
         <to-view-id>/jsp/wizard/new-space-scratch.jsp</to-view-id>
      </navigation-case>
      <navigation-case>
         <from-outcome>next-existing</from-outcome>
         <to-view-id>/jsp/wizard/new-space-scratch.jsp</to-view-id>
      </navigation-case>
      <navigation-case>
         <from-outcome>next-template</from-outcome>
         <to-view-id>/jsp/wizard/new-space-scratch.jsp</to-view-id>
      </navigation-case>
   </navigation-rule>
   
   <navigation-rule>
      <from-view-id>/jsp/wizard/new-space-scratch.jsp</from-view-id>
      <navigation-case>
         <from-outcome>next</from-outcome>
         <to-view-id>/jsp/wizard/new-space-details.jsp</to-view-id>
      </navigation-case>
      <navigation-case>
         <from-outcome>back</from-outcome>
         <to-view-id>/jsp/wizard/new-space.jsp</to-view-id>
      </navigation-case>
   </navigation-rule>
   
   <navigation-rule>
      <from-view-id>/jsp/wizard/new-space-details.jsp</from-view-id>
      <navigation-case>
         <from-outcome>next</from-outcome>
         <to-view-id>/jsp/wizard/new-space-summary.jsp</to-view-id>
      </navigation-case>
      <navigation-case>
         <from-outcome>back</from-outcome>
         <to-view-id>/jsp/wizard/new-space-scratch.jsp</to-view-id>
      </navigation-case>
      <navigation-case>
         <from-outcome>finish</from-outcome>
         <to-view-id>/jsp/jump.jsp</to-view-id>
      </navigation-case>
   </navigation-rule>
   
   <navigation-rule>
      <from-view-id>/jsp/wizard/new-space-summary.jsp</from-view-id>
      <navigation-case>
         <from-outcome>back</from-outcome>
         <to-view-id>/jsp/wizard/new-space-details.jsp</to-view-id>
      </navigation-case>
      <navigation-case>
         <from-outcome>finish</from-outcome>
         <to-view-id>/jsp/jump.jsp</to-view-id>
      </navigation-case>
   </navigation-rule>
   
</faces-config>
